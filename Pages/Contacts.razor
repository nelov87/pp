@page "/Contacts"
@inject IPageService pageService
@layout INStudio.Pages.InnerSiteLayout
@using System.Web

<div class="back_re">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2>@ContactPage.Title</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!--  contact -->
<div class="contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>Намерете ни</h2>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12 padding_left0">
                <div class="map_main">
                    <div class="map-responsive">
                        <iframe src="@ContactPage.Content" width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end contact -->

@code {
    public INStudio.Data.Page ContactPage { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

        this.ContactPage = pageService.GetPageByName("Контакти");

    }
}
